@model BlogPostList;
<h1>Posts</h1>
<a asp-controller="blog" asp-action="create">Create post</a><br/>
<a asp-controller="blog" asp-action="adduser">Add User</a>
@foreach(var post in Model.BlogPosts) {
    <div>
        <h2>@post.Title</h2>
        <p>@post.Content</p>
        <p>Posted by: <a asp-controller="blog" asp-action="author" asp-route-id="@post.AuthorId">@post.AuthorName</a> at @post.CreatedAtAction</p>
        <a asp-controller="blog" asp-action="post" asp-route-id="@post.PostId" class="btn btn-primary">Details</a>
        <a asp-controller="blog" asp-action="edit" asp-route-id="@post.PostId" class="btn btn-primary">Edit</a>
        <a asp-controller="blog" asp-action="delete" asp-route-id="@post.PostId" class="btn btn-danger">Delete</a>
    </div>
}