@model ViewModel;
    <div>
        <h2>@Model.PostView.Post.Title</h2>
        <p>@Model.PostView.Post.Content</p>
        <p>Posted by: <a asp-controller="blog" asp-action="author" asp-route-id="@Model.PostView.Author.AuthorId">@Model.PostView.Author.AuthorName</a> at @Model.PostView.Post.CreatedAtAction</p>
        <a asp-controller="blog" asp-action="edit" asp-route-id="@Model.PostView.Post.PostId">Edit</a>
        <a asp-controller="blog" asp-action="delete" asp-route-id="@Model.PostView.Post.PostId">Delete</a>
        <section>
            <h3>Comments</h3>
            @foreach(var comment in Model.Comments) {
            <div>
                <p>@comment.Content</p>
                <p>Posted by: <a asp-controller="blog" asp-action="author" asp-route-id="@comment.AuthorId">@comment.AuthorName</a> at @comment.CreatedAtAction</p>
            </div>
            
        }
        <div> 

            <form asp-controller="Blog" asp-action="NewComment">
    <div asp-validation-summary="All" class="text-danger"></div>
    <label>Author:</label>
    <br/>
    <!-- <input asp-for="AuthorId" /> -->
    <select asp-for="CommentCreate.Comment.AuthorId">
        @foreach(var author in Model.CommentCreate.Authors) {
            <option value="@author.AuthorId">@author.AuthorName</option>
        }
    </select>
    <span asp-validation-for="CommentCreate.Comment.AuthorId" class="text-danger"></span>
    <br/>
    <label>Content: </label>
    <br/>
    <textarea asp-for="CommentCreate.Comment.Content"></textarea>
    <span asp-validation-for="CommentCreate.Comment.Content" class="text-danger"></span>
    <br/>
    <button type="submit">Submit</button>
</form>

        </div>
        </section>
    </div>
