@model ViewModel;
    <div>
        <h2>@Model.PostView.Post.Title</h2>
        <p>@Model.PostView.Post.Content</p>
        <p>Posted by: @Model.PostView.Author.AuthorName at @Model.PostView.Post.CreatedAtAction</p>
        <a asp-controller="blog" asp-action="edit" asp-route-id="@Model.PostView.Post.PostId">Edit</a>
        <a asp-controller="blog" asp-action="delete" asp-route-id="@Model.PostView.Post.PostId">Delete</a>
        <section>
            <h3>Comments</h3>
            @foreach(var comment in Model.Comments) {
            <div>
                <p>@comment.Content</p>
                <p>Posted by: @comment.AuthorName at @comment.CreatedAtAction</p>
            </div>
            
        }
        <div>
            <!-- <partial name="_CommentForm"/> -->
            @Html.Partial("_CommentForm", Model.CommentModel)
        </div>
        </section>
    </div>
