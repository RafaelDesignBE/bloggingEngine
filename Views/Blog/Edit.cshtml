@model BlogPostModel;
@{var post = Model;}
    <div>
        <form asp-controller="Blog" asp-action="SaveEdit">
            <br/>
            <input asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
            <br/>
            <textarea asp-for="Content"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
            <br/>
            <button type="submit">Submit</button>
        </form>
        <a asp-controller="blog" asp-action="post" asp-route-id="@post.PostId">Back to post</a>
    </div>
